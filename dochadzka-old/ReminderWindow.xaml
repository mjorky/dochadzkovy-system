<Window x:Class="dochadzka.ReminderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dochadzka"
        mc:Ignorable="d"
        Title="" Height="200" Width="400" WindowStyle="None" WindowStartupLocation="CenterOwner">
    <Grid>
        <Border BorderBrush="Red" BorderThickness="3"/>
        <Label Content="Pripomienka na štvrťročnú uzávierku" 
               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"
               FontSize="20" FontWeight="Bold" />
        <Label Content="o XX dní (30.09.2023)" x:Name="lblDenDatum"
               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0"
               FontSize="20" FontWeight="Bold" Foreground="Red"/>
        <CheckBox x:Name="chkCancelReminder" Checked="CancelReminder_IsChecked"
                  HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,45" 
                  Content="Viac nepripomínať"/>
        <Button Content="Zavrieť" FontWeight="Bold" FontSize="15" BorderThickness="3" IsDefault="True"
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Click="Button_Click"/>
    </Grid>
</Window>
